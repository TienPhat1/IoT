<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WarningActivity"
    android:background="@drawable/backgroud">
    <ImageView
        android:id="@+id/i_logo_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:adjustViewBounds="true"
        android:maxHeight="90dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>
    <LinearLayout
        android:id="@+id/linear_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp">
        <TextView
            android:id="@+id/tv_admin_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="username"
            android:textSize="20dp"
            android:textColor="@color/colorPrimary"
            />
        <ImageView
            android:id="@+id/i_admin_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/user"
            android:adjustViewBounds="true"
            android:maxHeight="40dp"
            android:layout_marginLeft="15dp"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/img_warning"
        android:layout_width="278dp"
        android:layout_height="251dp"
        android:src="@drawable/warning"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/i_logo_warning"/>
    <TextView
        android:id="@+id/tv_warning"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorRed"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/img_warning"
        android:padding="10dp"/>
    <Button
        android:id="@+id/btn_controll_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/colorWhite"
        android:text="Controll Light"
        android:layout_below="@+id/tv_warning"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/newbutton" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@drawable/backgroud">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp">
        <TextView
            android:id="@+id/tv_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="username"
            android:textSize="20dp"
            android:textColor="@color/colorPrimary"
            />
        <ImageView
            android:id="@+id/i_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/user"
            android:adjustViewBounds="true"
            android:maxHeight="40dp"
            android:layout_marginLeft="15dp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/i_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:adjustViewBounds="true"
        android:maxWidth="120dp"
        android:maxHeight="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>
    <TextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QUẢN LÝ"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/i_logo"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimary"/>
    <TextView
        android:id="@+id/tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="THIẾT BỊ CHIẾU SÁNG"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_1"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorPrimary"/>
    <ImageView
        android:id="@+id/i_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/light"
        android:adjustViewBounds="true"
        android:maxHeight="150dp"
        android:layout_below="@id/tv_2"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"/>
    <TextView
        android:id="@+id/tv_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cường độ ánh sáng"
        android:textSize="20dp"
        android:textColor="@color/colorPrimary"
        android:layout_below="@id/i_light"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"/>
    <ImageView
        android:id="@+id/i_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/history"
        android:adjustViewBounds="true"
        android:maxHeight="150dp"
        android:layout_below="@id/tv_2"
        android:layout_alignParentRight="true"
        android:layout_marginTop="40dp"
        android:layout_marginRight="40dp"/>
    <TextView
        android:id="@+id/tv_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lịch sử"
        android:textSize="20dp"
        android:textColor="@color/colorPrimary"
        android:layout_below="@id/i_history"
        android:layout_alignParentRight="true"
        android:layout_marginRight="90dp"
        android:layout_marginTop="5dp"/>
    <ImageView
        android:id="@+id/i_controller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/controller"
        android:adjustViewBounds="true"
        android:maxHeight="150dp"
        android:layout_below="@id/i_light"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="40dp"/>
    <TextView
        android:id="@+id/tv_controller"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Điều chỉnh cường độ ánh  "
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:layout_below="@id/i_controller"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"/>
    <ImageView
        android:id="@+id/i_avg_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/avagelight"
        android:adjustViewBounds="true"
        android:maxHeight="150dp"
        android:layout_below="@id/i_history"
        android:layout_alignParentRight="true"
        android:layout_marginTop="40dp"
        android:layout_marginRight="40dp"/>
    <TextView
        android:id="@+id/tv_avg_light"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Cường độ ánh sáng trung binh"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:layout_below="@id/i_avg_light"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_marginTop="5dp"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ControllLightActivity"
    android:background="@drawable/backgroud">
    <ImageView
        android:id="@+id/i_logo_controller_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:adjustViewBounds="true"
        android:maxHeight="90dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>
    <LinearLayout
        android:id="@+id/linear_controller_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp">
        <TextView
            android:id="@+id/tv_admin_controller_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="username"
            android:textSize="20dp"
            android:textColor="@color/colorPrimary"
            />
        <ImageView
            android:id="@+id/i_admin_controller_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/user"
            android:adjustViewBounds="true"
            android:maxHeight="40dp"
            android:layout_marginLeft="15dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_title_controller_light"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="ĐIỀU CHỈNH CƯỜNG ĐỘ ÁNH SÁNG"
        android:textSize="30dp"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"/>
    <com.xw.repo.BubbleSeekBar
        android:id="@+id/sbar_controller_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/tv_title_controller_light"
        app:bsb_bubble_color="@color/colorYellow"
        app:bsb_bubble_text_color="@color/colorWhite"
        app:bsb_min="0"
        app:bsb_max="100"
        app:bsb_progress="0"
        app:bsb_second_track_color="@color/colorRed"
        app:bsb_section_count="5"
        app:bsb_section_text_position="bottom_sides"
        app:bsb_auto_adjust_section_mark="true"
        app:bsb_show_section_text="true"
        app:bsb_show_thumb_text="true"
        app:bsb_track_color="@color/colorPrimaryDark"/>
    <TextView
        android:id="@+id/tv_value_controller_light"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/sbar_controller_light"
        android:textColor="@color/colorBlack"
        android:text="0"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:background="@drawable/backgroundtextview"/>
    <Button
        android:id="@+id/btn_change_light"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_value_controller_light"
        android:layout_marginTop="100dp"
        android:text="Change"
        android:textSize="25dp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/btncotroller"/>


</RelativeLayout>